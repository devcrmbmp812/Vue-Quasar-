@import '~variables'

.car-details
  .top-info-box
    .icon-box
      padding-top 23px
      padding-bottom 43px
      border-bottom 1px solid $color-primary
      .icon-item
        margin-bottom 6px
      .text-font-3
        text-align center
        height 24px
        line-height 24px
    .content-box
      padding 30px 0 36px
      border-bottom 1px solid $color-primary
      .annual-premium
        padding-right 55px
        p
          text-align right
      .quote-reference
        padding-left 55px
        p
          text-align left

  .payment-option-box
    margin-top 47px
    .payment-choice
      margin-top 50px
      margin-bottom 78px
      .col-md-6
        padding-left 0
        .content-box
          background-color #F7F9FD
          padding 32px 28px 26px 28px
          p
            text-align center
            margin-top 22px
          .caption
            margin-top 0
            line-height 36px
          .total-amount
            margin 23px auto 9px
            text-align center
          .card-box
            margin-top 38px
            margin-bottom 45px
            span
              margin-left 5%
            span.first
              margin-left: 0
          .btn-box
            height 60px
        .content-box.selected
          border: 2px solid #95BEDF
          padding 29px 26px 26px 26px
        .content-box.monthly
          margin-right 25px
        .content-box.full
          margin-left 25px
  .included-quote-box
    margin-top 77px
    margin-bottom 102px
    .included-option
      margin-top 30px
      .option-item
        padding-left 0
        .text-box
          color $color-main
          font-size 20px
          font-weight: $font-weight-light
          margin-left 2%
  .optional-extra-box
    .optional-extra
      margin-top 53px
    .info
      margin-top 23px
      line-height 36px
    .plan-upgrade-box
      margin-top 34px
      .plan-upgrade-detail
        .row-box
          height 50px
        .info-box
          width 31%
        .status-box
          width 20%
          margin-left 3%
        .content-header
          .row-box
            height 50px
            .most-popular
              background-color $color-main
          .car-info
            height: inherit
            .status-box
              .basic, .next-first, .next-second
                height 100%
                padding 13px 6px 11px
              .basic
                background-color $color-standard
              .next-first
                background-color #B7AA08
              .next-second
                background-color #A1B1BD
        .content-body
          .content-box
            height 50px
          .content-box:nth-child(odd)
            background-color #F7F9FD
          .info-box
            .content-box
              padding-left 10px
          .status-box.selected
            border-left 1px solid $color-standard
            border-right 1px solid $color-standard
          .text-font-9
            height 50px
        .content-footer
          .btn-upgrade
            width 100%
            height 100%
            background-color #4BC6DF
            border-radius 0
            .q-btn-inner
              color $white
              font-size 16px
              font-weight: $font-weight-regular
          .btn-upgrade.selected
            background-color $color-standard
          .row-box
            .status-box
              span
                margin-left 9px
            .status-box.doc-download
              padding-top 10px
      .plan-upgrade-status
        margin-top 52px
        .text-font-12
          margin-bottom 44px
        .text-font-main
          margin-top: 132px
          margin-bottom: 39px
  .info-confirm-box
    margin-top: 147px
    div
      .info-box
        float left
        width:48%
        margin-right:4%
        list-style none
        border 1px solid #E9F2F8
        margin-top 49px
        .info-title
          padding 26px 20px 26px 20px
          background-color #F7F9FD
        .info-content
          .content-row
            padding 11px 20px 13px 20px
        .info-content:last-child
          font-weight: $font-weight-regular
      .info-box:nth-child(even)
        margin-right 0
    .btn-box-wrapper
      margin-top 142px
  .btn-custom
    padding 8px 19px
    border 1px solid $color-standard
    .q-btn-inner
      font-size 18px
      font-weight: $font-weight-regular
      color $color-standard
  .plan-upgrade-detail
    .q-btn, .upgrade-info
      text-transform uppercase
    .upgrade-info
      color $white
      font-size 16px
      font-weight: $font-weight-regular
      text-align: center
      overflow-wrap: break-word
      width 100%
  .q-btn
    color: $color-standard
    //box-shadow none
    .q-icon
      font-size 16px
      background transparent
  li:nth-child(even)
    background-color: #F7F9FD


@media screen and (max-width: 992px)
  .car-details
    .info-confirm-box
      margin-top: 147px
      div
        .info-box
          width:100%
          margin-right:0
    .optional-extra-box
      .plan-upgrade-box
        .plan-upgrade-detail
          *
            font-size: 12px
    .top-info-box
      .icon-box
        order: 2
      .content-box
        order: 1
      .content-box
        .annual-premium, .quote-reference
          padding 0
          p
            text-align center
        .quote-reference
          margin-top 16px

@media (max-width 767px)
  .car-details
    .payment-option-box
      .payment-choice
        .col-md-6
          .content-box.monthly
            margin-right 0
          .content-box.full
            margin-left 0
